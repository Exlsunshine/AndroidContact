<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <RelativeLayout 
	    	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
		    	<Button
			        android:layout_width="wrap_content"
			        android:layout_height="48dip"
			        android:layout_alignParentLeft="true"
			        android:id="@+id/cancel"
			       	android:background="@color/transparent"
			       	android:text="Cancel"
			       	android:textColor="#00b9e8"/>
		    	<!-- android:background="@drawable/ic_cancel" -->
	    	    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="New Friends" 
			        android:layout_centerInParent="true"
			        android:id="@+id/tv1"
			        android:textSize="25dip"/>
	    	    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="48dip"
			        android:layout_alignParentRight="true"
			        android:id="@+id/done"
			       	android:background="@color/transparent"
			       	android:text="Save"
			       	android:textColor="#00b9e8"/>
	    	    <!--  android:background="@drawable/ic_done" -->
	    	</RelativeLayout>
	    
	    <ImageView   
	        android:layout_width="fill_parent"  
	        android:layout_height="0.5dip"  
	        android:background="#cccccc"/>  
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center">
	    	<ImageView 
	    	    android:layout_width="100dip"
	    		android:layout_height="100dip"
	    		android:background="@drawable/ic_launcher"
	    		android:id="@+id/portrait"/>
	    	<LinearLayout 
	    	    android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical">
	    	    <EditText 
	    	        android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
	    			android:text="First"
	    			android:id="@+id/first_name"/>
	    	    <EditText 
	    	        android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
	    			android:text="Last"
	    			android:id="@+id/last_name"/>
	    	    <EditText 
	    	        android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
	    			android:text="Company"
	    			android:id="@+id/company"/>
	    	</LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical">
	    	<LinearLayout 
	    	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		    	android:id="@+id/add_phone_outter_layout">
	    	    <TextView 
                    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:text="Basic info"
                    android:layout_marginLeft="10dip"/>
	    	    <Button 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="Add phone"
	    	        android:id="@+id/add_phone"
	    	        android:layout_gravity="center_horizontal"
	    	        android:background="@android:color/transparent"
	    	        android:textColor="#00b9e8"/>
	    	</LinearLayout>
	        
	    	<ImageView 
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="0.5dip"
	    	    android:background="#cccccc"/>
	    	
	        <LinearLayout 
	    	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		    	android:id="@+id/add_others_outter_layout">
	    	    <TextView 
                    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:text="Advanced info"
                    android:layout_marginLeft="10dip"/>
	    	    <Button 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="Add others"
	    	        android:id="@+id/add_others"
	    	        android:layout_gravity="center_horizontal"
	    	        android:background="@android:color/transparent"
	    	        android:textColor="#00b9e8"/>
	    	</LinearLayout>
	    	
	        <AbsoluteLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
				<ImageView 
					android:background="@drawable/composer_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_x="20dip"
					android:layout_y="20dip"
					android:id="@+id/imgCenter"/> 
				<ImageView 
					android:background="@drawable/composer_thought"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_x="10dip"
					android:layout_y="10dip"
					android:visibility="invisible"
					android:clickable="false"
					android:id="@+id/imgGallery"/> 
				<ImageView 
					android:background="@drawable/composer_camera"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_x="10dip"
					android:layout_y="10dip"
					android:visibility="invisible"
					android:clickable="false"
					android:id="@+id/imgCamera"/> 
			</AbsoluteLayout>
	        
	    </LinearLayout>
	</LinearLayout>
</ScrollView>