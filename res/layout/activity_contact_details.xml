<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dip">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:background="@drawable/ic_launcher"
	        android:id="@+id/portrait_details_layout"
	        android:layout_marginLeft="50dip"
	        android:layout_marginRight="50dip"/>
        <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:text="first last name\nnick name" 
		    android:id="@+id/name_details_layout"
		    android:gravity="center_vertical"/>
    </LinearLayout>
        
	<View 
		android:layout_width="fill_parent"
 		android:layout_height="30dip"/>
        
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="30dip">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		        android:text="134987-3282"
		        android:gravity="center_vertical"
		        android:id="@+id/mobileNo_details_layout"
		        android:layout_marginLeft="30dip"/>
			<ImageView 
                android:layout_width="30dip"
		        android:layout_height="30dip"
		        android:background="@drawable/message_icon"
		        android:layout_toLeftOf="@+id/dial"
		        android:layout_marginRight="10dip"
		        android:id="@+id/sms"/>
			<ImageView 
                android:layout_width="30dip"
		        android:layout_height="30dip"
		        android:background="@drawable/phone_icon"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="30dip"
		        android:id="@+id/dial"/>
		</RelativeLayout>
            
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#cccccc"/>
            
            <View 
                android:layout_width="fill_parent"
                android:layout_height="20dip"/>
            
            <LinearLayout 
                android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
                <TextView 
                    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:text="Notes"
                    android:layout_marginLeft="30dip"/>
            </LinearLayout>
        </LinearLayout>       
</LinearLayout>